<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.project_0.MainActivity">

    <Button
        android:text="SPOTIFY STREAMER"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:id="@+id/streamer"
        android:background="#03F0FD"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="SCORES APP"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/scores"
        android:background="#03F0FD"
        android:layout_below="@+id/streamer"
        android:layout_alignStart="@+id/streamer" />

    <Button
        android:text="LIBRARY APP"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/library"
        android:background="#03F0FD"
        android:layout_below="@+id/scores"
        android:layout_alignStart="@+id/scores" />

    <Button
        android:text="BUILD IT BIGGER"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/bigger"
        android:background="#03F0FD"
        android:layout_below="@+id/library"
        android:layout_alignStart="@+id/library" />

    <Button
        android:text="XYZ READER"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/reader"
        android:background="#03F0FD"
        android:layout_below="@+id/bigger"
        android:layout_alignStart="@+id/bigger" />

    <Button
        android:text="CAPSTONE: MY OWN APP"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/capstone"
        android:background="#03F0FD"
        android:layout_below="@+id/reader"
        android:layout_alignStart="@+id/reader" />

    <TextView
        android:text="My Nanodegree Apps!"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />
</RelativeLayout>
